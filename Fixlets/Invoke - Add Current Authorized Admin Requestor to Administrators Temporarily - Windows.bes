regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Expired\{parameter "Timestamp"}\{sid of logged on user}]" "Start"="{now as string}" 
regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Expired\{parameter "Timestamp"}\{sid of logged on user}]" "Expiration"="{now + (1 * day)}" </ActionScript>
		</Action>
		<Action ID="Action4">
			<Description>
				<PreLink>Click </PreLink>
				<Link>here</Link>
				<PostLink><![CDATA[ to grant the current user authorized admin requestor&nbsp;administrative rights for&nbsp;5 days.]]></PostLink>
			</Description>
			<ActionScript MIMEType="application/x-Fixlet-Windows-Shell">
wait net localgroup "administrators" "{sid of current user}" /add

parameter "Timestamp"="{now as string}"

regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Current\{sid of logged on user}]" "Start"="{now as string}" 
regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Current\{sid of logged on user}]" "Expiration"="{now + (5 * day)}" 

regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Expired\{parameter "Timestamp"}\{sid of logged on user}]" "Start"="{now as string}" 
regset "[HKEY_LOCAL_MACHINE\Software\C3 Inventory\Administrative Rights\Expired\{parameter "Timestamp"}\{sid of logged on user}]" "Expiration"="{now + (5 * day)}" </ActionScript>
		</Action>
	</Fixlet>
</BES>
